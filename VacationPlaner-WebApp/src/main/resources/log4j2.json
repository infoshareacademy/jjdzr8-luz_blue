{
  "configuration": {
    "status": "WARN",
    "appenders": {
      "console": {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        },
        "ThresholdFilter": {
          "level": "DEBUG",
          "onMatch": "ACCEPT",
          "onMismatch": "DENY"
        }
      },
      "JsonFile": {
        "name": "JsonFile",
        "fileName": "logs/Myapp.json",
        "filePattern": "logs/Myapp-%d{yyyy-MM-dd}.log.gz",
        "PatternLayout": {
          "pattern": "%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        },
        "ThresholdFilter": {
          "level": "INFO",
          "onMatch": "ACCEPT",
          "onMismatch": "DENY"
        },
        "JsonLayout": {
          "complete": true,
          "compact": true,
          "eventEol": true
        },
        "Policies": {
          "TimeBasedTriggeringPolicy": {
            "interval": 1,
            "modulate": true
          }
        },
        "DefaultRolloverStrategy": {
          "max": 30
        }
      }
    },
    "loggers": {
      "root": {
        "level": "debug",
        "appender-ref": [
          {
            "ref": "Console"
          },
          {
            "ref": "JsonFile"
          }
        ]
      }
    }
  }
}
